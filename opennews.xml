<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>OpenNews Updates from @pudo</title>
  <link href="https://pudo.org/opennews.xml" rel="self" />
  <link href="https://pudo.org/" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>https://pudo.org/</id>
  <author>
    <name>Friedrich Lindenberg</name>
  </author>
  {% for post in site.posts %}
   {% if post.opennews and post.unlisted != true %}
  <entry>
    <title>{{ post.title | xml_escape }}</title>
    <link href="https://pudo.org{{ post.url }}" />
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>https://pudo.org{{ post.id }}</id>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endif %}
 {% endfor %}
</feed>
